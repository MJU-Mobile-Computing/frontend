<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 아침 베너 -->
    <LinearLayout
        android:id="@+id/breakfastBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- 아침 이미지 -->
        <ImageView
            android:id="@+id/imgBreakfast"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_breakfast" />

        <!-- 아침 텍스트 뷰 -->
        <TextView
            android:id="@+id/tvBreakfastMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="아침 메뉴"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginEnd="8dp" />

        <!-- 아침 선택된 음식명과 칼로리 텍스트 뷰 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSelectedBreakfastFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택된 음식"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvSelectedBreakfastCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="칼로리: 0 kcal"
                android:textSize="16sp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- 아침 베너 추가 버튼 -->
        <Button
            android:id="@+id/btnAddBreakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가"
            android:theme="@style/CustomButton" />
    </LinearLayout>

    <!-- 점심 베너 -->
    <LinearLayout
        android:id="@+id/lunchBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_below="@id/breakfastBanner">

        <!-- 점심 이미지 -->
        <ImageView
            android:id="@+id/imgLunch"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_lunch" />

        <!-- 점심 텍스트 뷰 -->
        <TextView
            android:id="@+id/tvLunchMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="점심 메뉴"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginEnd="8dp" />

        <!-- 점심 선택된 음식명과 칼로리 텍스트 뷰 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSelectedLunchFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택된 음식"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvSelectedLunchCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="칼로리: 0 kcal"
                android:textSize="16sp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- 점심 베너 추가 버튼 -->
        <Button
            android:id="@+id/btnAddLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가"
            android:theme="@style/CustomButton" />
    </LinearLayout>

    <!-- 저녁 베너 -->
    <LinearLayout
        android:id="@+id/dinnerBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_below="@id/lunchBanner">

        <!-- 저녁 이미지 -->
        <ImageView
            android:id="@+id/imgDinner"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_dinner" />

        <!-- 저녁 텍스트 뷰 -->
        <TextView
            android:id="@+id/tvDinnerMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="저녁 메뉴"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginEnd="8dp" />

        <!-- 저녁 선택된 음식명과 칼로리 텍스트 뷰 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSelectedDinnerFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택된 음식"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvSelectedDinnerCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="칼로리: 0 kcal"
                android:textSize="16sp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- 저녁 베너 추가 버튼 -->
        <Button
            android:id="@+id/btnAddDinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가"
            android:theme="@style/CustomButton" />
    </LinearLayout>

    <!-- 간식 베너 -->
    <LinearLayout
        android:id="@+id/snackBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:layout_below="@id/dinnerBanner">

        <!-- 간식 이미지 -->
        <ImageView
            android:id="@+id/imgSnack"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_snack" />

        <!-- 간식 텍스트 뷰 -->
        <TextView
            android:id="@+id/tvSnackMenu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="간식 메뉴"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginEnd="8dp" />

        <!-- 간식 선택된 음식명과 칼로리 텍스트 뷰 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSelectedSnackFood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선택된 음식"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/tvSelectedSnackCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="칼로리: 0 kcal"
                android:textSize="16sp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- 간식 베너 추가 버튼 -->
        <Button
            android:id="@+id/btnAddSnack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가"
            android:theme="@style/CustomButton" />
    </LinearLayout>

    <!-- 총 칼로리 표시 -->
    <TextView
        android:id="@+id/tvTotalCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 칼로리: 0 kcal"
        android:textSize="16sp"
        android:textColor="#000"
        android:layout_below="@id/snackBanner"
        android:layout_margin="16dp" />

    <!-- 활동 추천 영역 -->
    <LinearLayout
        android:id="@+id/activityRecommendation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_below="@id/tvTotalCalories">

        <TextView
            android:id="@+id/tvActivityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추천 활동"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvActivityDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가된 칼로리만큼 활동으로 소모할 수 있습니다."
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_marginBottom="8dp" />

        <!-- 예시: 산책 추천 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="#EEE"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_walk"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="산책"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30분"
                android:textSize="16sp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- 예시: 달리기 추천 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="#EEE"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_run"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="달리기"
                android:textSize="16sp"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20분"
                android:textSize="16sp"
                android:textColor="#000" />
        </LinearLayout>

        <!-- 더 많은 활동 추가 가능 -->
    </LinearLayout>

    <!-- btnDone 버튼 추가 -->
    <Button
        android:id="@+id/btnDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:theme="@style/CustomButton"/>
</RelativeLayout>

